<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:orientation="vertical"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:id="@+id/c1"
    android:layout_centerInParent="true"
    android:textAlignment="center"
    android:layout_width="200dp"
    android:layout_height="500dp">
    <TextView
        android:id="@+id/txtBlue"
        android:layout_centerInParent="true"
        android:background="#2196F3"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Blue">
    </TextView>

    <TextView
        android:id="@+id/txtGreen"
        android:layout_above="@+id/txtBlue"
        android:layout_alignLeft="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:background="#4CAF50"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Green">
    </TextView>
    <TextView
        android:id="@+id/txtRed"
        android:layout_above="@+id/txtGreen"
        android:layout_alignLeft="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:background="#F44336"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Red">
    </TextView>
    <TextView
        android:id="@+id/txtOrange"
        android:layout_below="@+id/txtBlue"
        android:layout_alignLeft="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:background="#FFEB3B"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Orange">
    </TextView>
    <TextView
        android:id="@+id/txtGrey"
        android:layout_below="@+id/txtOrange"
        android:layout_alignLeft="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:background="#DCDBD4"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Grey">
    </TextView>
    <TextView
        android:id="@+id/txtPink"
        android:layout_below="@+id/txtGrey"
        android:layout_alignLeft="@+id/txtBlue"
        android:layout_width="wrap_content"
        android:background="#F5F372F1"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:text="Pink">
    </TextView>
</RelativeLayout>






</RelativeLayout>