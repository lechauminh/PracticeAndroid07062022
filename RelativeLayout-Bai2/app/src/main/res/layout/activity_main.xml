<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:textSize="30sp"

        android:layout_marginTop="50dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#F44336"
        android:gravity="center"
        android:text="1"
        />

    <TextView
        android:id="@+id/txt2"
        android:textSize="30sp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/txt1"
        android:layout_toEndOf="@id/txt1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="2"
        />

    <TextView
        android:id="@+id/txt3"
        android:textSize="30sp"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@+id/txt2"
        android:layout_toEndOf="@id/txt2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:text="3"
        />

    <TextView
        android:id="@+id/txt4"
        android:textSize="30sp"
        android:layout_marginTop="170dp"
        android:layout_toRightOf="@+id/txt3"
        android:layout_toEndOf="@id/txt3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="4"
        />

    <TextView
        android:id="@+id/txt5"
        android:textSize="30sp"
        android:layout_below="@+id/txt4"
        android:layout_toStartOf="@id/txt4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#25C6DA29"
        android:gravity="center"
        android:text="5"
        />
    <TextView
        android:id="@+id/txt6"
        android:textSize="30sp"
        android:layout_below="@+id/txt5"
        android:layout_toStartOf="@id/txt5"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#D7636C18"
        android:gravity="center"
        android:text="6"
        />

    <TextView
        android:id="@+id/txt7"
        android:textSize="30sp"
        android:layout_below="@+id/txt6"
        android:layout_toStartOf="@id/txt6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#0394F4"
        android:gravity="center"
        android:text="6"
        />





</RelativeLayout>